%table.table.table-striped
  %thead
    %tr
      %th= Issue.human_attribute_name(:name)
      %th= Issue.human_attribute_name(:category)
  %tbody
    - if @issues.empty?
      %tr
        %td.text-center{ colspan: 2 }
          %p No issues
    - else
      = render @issues

.text-center
  / = paginate @issues
