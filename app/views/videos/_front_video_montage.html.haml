- jwUrl = "http://content.jwplatform.com/thumbs/"
- sizes = {small: "360", medium: "480", large: "720"}
.video-montage
  .montage__container
    =image_tag("#{jwUrl}#{most_viewed.media_id}-#{sizes[:medium]}.jpg", class: "montage__large")
  .montage__container
    - around_site.each do |video|
      =image_tag("#{jwUrl}#{video.media_id}-#{sizes[:medium]}.jpg", class: "montage__small")
  .clear
