- video_slicktrabutes = '{"slidesToShow": 5, "slidesToScroll": 1, "rows": 1, "infinite": false, "responsive": [{"breakpoint": 1024, "settings": { "slidesToShow": 3, "slidesToScroll": 3, "infinite": true } }, { "breakpoint": 600, "settings": { "slidesToShow": 2, "slidesToScroll": 2 } }, { "breakpoint": 480, "settings": { "slidesToShow": 2, "slidesToScroll": 1 } }] }'

#video-hero{style: "padding: 45px 0px 90px 0px; background-color: #000000;"}
  .video-container{style: "width: 800px; height: 450px; margin: 0px auto;"}
    =render 'videos/inline_video', video_id: @videos.first.media_id
#issue-block__container.container-fluid
  .row
    .col-md-6.col-md-offset-2
      %h1=@issue.name
      %p=@issue.description
    .col-md-2
      %h2="FOR"
    .col-md-2
      %h2="AGAINST"
  .row
    .col-md-8
    .col-md-2
      %h2="Total videos for this issue"
      %p=@issue_video_count
    .col-md-2
      %h2="Share this issue"
      =render 'share_buttons'
#issue-related__videos.container-fluid
  %h2="More Videos About #{@issue.name}"
  - video_count = @issue_video_count / 20
  // Set length to max 2 so we only get 3 rows... perhaps we should do more, or perhaps we should have a nice grid below?
  - length = video_count > 3 ? 2 : video_count
  - (0..length).each do |i|
    = render 'videos/video_carousel', videos: @videos.slice(i * 20, 20), slicktrabutes: video_slicktrabutes, title: ""
#how-it-works__container.container-fluid
  .row
    %h3.lightblue="How It Works"
    .col-md-6.col-md-offset-3.darkblue
      = render 'call_to_action', text: t('call_to_action.everybody_opinion'), sub_text: t('call_to_action.opinion_sub_html'), button_text: t('call_to_action.share_button')
